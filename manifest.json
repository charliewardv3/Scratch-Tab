{
  "name": "Scratch Tab",
  "version": "1.3",
  "manifest_version": 2,
  "description": "Simple Scratch Pad Tab for Google Chrome",
  "icons": { "128": "icon_128.png", "16":"icon.png" },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs"
  ]
}